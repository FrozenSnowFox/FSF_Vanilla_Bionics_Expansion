				</value>
			</li>
			
	<!-- FSF Bionics -->
			
			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "FSFBionicPowerArm"]/comps</xpath>
				<value>
        			<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            			<scaleAdjustment>0.5</scaleAdjustment>
        			</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "FSFBionicJaw"]/comps</xpath>
