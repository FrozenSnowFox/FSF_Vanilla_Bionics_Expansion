<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Vanilla Bionics -->
	
	<Operation Class="PatchOperationFindMod">
		
    	<mods>
        	<li>Elite Bionics Framework</li>
    	</mods>
		
    	<match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "BionicEye"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>0.25</scaleAdjustment>
        				</li>
    				</comps>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "BionicArm"]/comps</xpath>
				<value>
        			<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            			<scaleAdjustment>0.25</scaleAdjustment>
        			</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "BionicLeg"]</xpath>
				<value>
					<comps>
