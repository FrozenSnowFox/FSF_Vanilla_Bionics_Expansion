<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			
  			<!-- Change Research Requirements -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "FSFBionicPowerArm"]/recipeMaker/researchPrerequisites</xpath>
				<value>
					<li>SpecializedLimbs</li>
				</value>
			</li>
			
  			<!-- Change Bionic Power Arm Cost -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "FSFBionicPowerArm"]/costList</xpath>
				<value>
					<costList>
						<Plasteel>30</Plasteel>
						<ComponentSpacer>6</ComponentSpacer>
					</costList>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "FSFBionicPowerArm"]/butcherProducts</xpath>
				<value>
					<butcherProducts>
						<Plasteel>30</Plasteel>
						<ComponentSpacer>6</ComponentSpacer>
					</butcherProducts>
				</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>