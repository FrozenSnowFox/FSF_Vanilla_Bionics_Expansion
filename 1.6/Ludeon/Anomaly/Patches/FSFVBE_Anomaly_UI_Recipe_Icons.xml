<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
	
	<!-- Add Bionic Icons to Anomaly Items -->
			
			<!-- Ghoul Plating -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallGhoulPlating"]</xpath>
				<value>
					<uiIconThing>GhoulPlating</uiIconThing>
				</value>
			</li>
			
			<!-- Ghoul Barbs -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallGhoulBarbs"]</xpath>
				<value>
					<uiIconThing>GhoulBarbs</uiIconThing>
				</value>
			</li>
			
			<!-- Adrenal Heart -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallAdrenalHeart"]</xpath>
				<value>
					<uiIconThing>AdrenalHeart</uiIconThing>
				</value>
			</li>
			
			<!-- Corrosive Heart -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallCorrosiveHeart"]</xpath>
				<value>
					<uiIconThing>CorrosiveHeart</uiIconThing>
				</value>
			</li>
			
			<!-- Metalblood Heart -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallMetalbloodHeart"]</xpath>
				<value>
					<uiIconThing>MetalbloodHeart</uiIconThing>
				</value>
			</li>
			
			<!-- Revenant Vertebrae -->
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName = "InstallRevenantVertebrae"]</xpath>
				<value>
					<uiIconThing>RevenantVertebrae</uiIconThing>
				</value>
			</li>
	
		</operations>
	</Operation>
	
</Patch>