<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
	
	<!-- Patch Artificial Lungs to Prevent Lung Rot Infections -->
	<!-- Note: The makeImmuneTo tag does not prevent lung rot (due to how its coded?).  However it does list it as an immunity on the bionic which is good for player visibility. -->
			
			<!-- Biotech DLC - Detoxifier Lung -->
			
			<li MayRequire="Ludeon.RimWorld.Biotech" Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "DetoxifierLung"]/stages/li</xpath>
				<value>
					<makeImmuneTo>
						<li>LungRot</li>
					</makeImmuneTo>
				</value>
			</li>
	
		</operations>
	</Operation>
	
</Patch>