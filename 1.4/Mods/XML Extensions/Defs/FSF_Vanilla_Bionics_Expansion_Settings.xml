<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<XmlExtensions.SettingsMenuDef>
		<defName>FrozenSnowFoxVanillaBionicsExpansionSettings</defName> <!--Can be anything unique with no periods-->
		<modId>FrozenSnowFox.FrozenSnowFoxVanillaBionicsExpansion</modId> <!--MUST be the same as the one entered earlier-->    
		<label>FrozenSnowFox Vanilla Bionics Expansion</label> <!-- This is what displays as your mod's name-->    
		<settings> <!--This is where you define what settings are in the settings menu-->

			<li Class="XmlExtensions.Setting.SetColor">
				<color>(187,0,0)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>For any changed settings to take effect the game must be restarted.</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFVBEModWarning</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<li Class="XmlExtensions.Setting.Text">
				<text>Vanilla Bionics Expansion Settings</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFVBESettingsTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<!-- Bionics Table -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>Bionics Table</label>
				<key>FSFVBEBionicsTableOn</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFVBEBionicsTableTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.ToggleableSettings">
				<key>FSFVBEBionicsTableOn</key>
				<caseFalse>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Enables the Bionics Table which contains all bionics recipes.  The recipes are also removed from existing workbenches to remove clutter.</text>
						<tKey>FSFVBEBionicsTableOnDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>				
				</caseFalse>
				<caseTrue>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Enables the Bionics Table which contains all bionics recipes.  The recipes are also removed from existing workbenches to remove clutter.</text>
						<tKey>FSFVBEBionicsTableOnDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
					<li Class="XmlExtensions.Setting.Checkbox">
						<label>Bionics Worktype</label>
						<key>FSFVBEBionicsWorktype</key>
						<defaultValue>false</defaultValue>
						<tKey>FSFVBEBionicsWorktypeTitle</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Enables the Bionics Worktype and changes the Bionics Table to use the Bionics Worktype.\nWarning: Enabling a new worktype on existing saves can cause game breaking issues for some people.</text>
						<tKey>FSFVBEBionicsWorktypeDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
					<li Class="XmlExtensions.Setting.Checkbox">
						<label>Move Mechanitor Implant Recipes (Require Biotech DLC)</label>
						<key>FSFVBEMechanitorImplantRecipes</key>
						<defaultValue>false</defaultValue>
						<tKey>FSFVBEMechanitorImplantRecipesTitle</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Removes the Mechanitor Implant Recipes from existing workbenches and adds them to the Bionics Table.</text>
						<tKey>FSFVBEMechanitorImplantRecipesDesc</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
				</caseTrue>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
				<spacing>12</spacing>
			</li>
			
			<!-- DLC Interaction -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>DLC Interaction</label>
				<key>FSFVBEDLCInteraction</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFVBEDLCInteractionTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Patches several DLC bionics and related items so they interact with each other.\n\nThe Ideology DLC Neural Supercharger Buff is given a bonus with Biotech to increase Child Learning Rate.\nThe Royalty DLC Learning Assistant is given a bonus with Biotech to increase Child Learning Rate.\nThe Royalty DLC Psychic Reader is given a bonus with Ideology to increase Conversion and Suppression Power.</text>
				<tKey>FSFVBEDLCInteractionDesc</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			
		</settings>
	</XmlExtensions.SettingsMenuDef>

</Defs>
